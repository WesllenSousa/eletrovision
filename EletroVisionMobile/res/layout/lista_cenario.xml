<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/transparente" >
    
	 <TextView 
	      android:id="@+id/listaCenario_tv_cenario"
	      android:layout_centerVertical="true" android:layout_marginLeft="1sp"
	      android:layout_width="fill_parent" android:layout_height="wrap_content" 
	      style="@style/estilo_textview_lista" android:background="@color/transparente"  />
	 
	 <ImageButton 
	     android:id="@+id/listaCenario_ib_configuracao"
	     android:layout_centerVertical="true" android:layout_alignParentRight="true"
	     android:layout_width="wrap_content" android:layout_height="wrap_content" 
	     android:contentDescription="@string/cenario_configuracao"
	     />
	 
	 <ImageButton 
	     android:id="@+id/listaCenario_ib_acionar"
	     android:layout_centerVertical="true" android:layout_toLeftOf="@+id/listaCenario_ib_configuracao"
	     android:layout_width="wrap_content" android:layout_height="wrap_content" 
	     android:contentDescription="@string/cenario_acionar"
	     />
	                     
</RelativeLayout>    